::-webkit-scrollbar {
    width: 0;
    background: transparent;
}

.zebra-doc-simulator {
    position: absolute;
    top: $zebra-doc-padding + $zebra-doc-header-top-height;
    right: $zebra-doc-padding;
    z-index: 1;
    box-sizing: border-box;
    width: $zebra-doc-simulator-width;
    min-width: $zebra-doc-simulator-width;
    overflow: hidden;
    background: #fafafa;
    border-radius: $zebra-doc-border-radius;
    box-shadow: #ebedf0 0 4px 12px;
}

@media (max-width: 1100px) {
    right: auto;
    left: 750px;
}

@media (min-width: $zebra-doc-row-max-width) {
    right: 50%;
    margin-right: -($zebra-doc-row-max-width / 2) + 40px;
}

.zebra-doc-simulator-fixed {
    position: fixed;
    top: $zebra-doc-padding + $zebra-doc-header-top-height;
}

iframe {
    display: block;
    width: 100%;
}

.theme-default-content {
    max-width: 1000px !important;
    margin: 0 auto 0 0 !important;
}

@media (max-width: 1500px) {
    .theme-default-content {
        max-width: 1000px !important;
    }

    .zebra-doc-simulator-fixed {
        position: relative;
        top: 0;
        left: 0;
    }
}

@media (min-width: 1500px) {
    .theme-default-content {
        max-width: calc(100% - 500px) !important;
    }
}